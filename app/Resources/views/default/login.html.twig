{% extends 'template.html.twig' %}

{% block title %}
    {{ parent()}}
    - Login
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <form class="form-horizontal" action="{{ path('loginCheck')}}" method="post">           
            <div class="form-group">
                <label class="control-label col-sm-2" for="mail">Mail:</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="email" name="_username" placeholder="Email" value=""/>
                </div>
            </div>
            
            <div class="form-group">
                <label class="control-label col-sm-2" for="password">Mot de passe</label>
                <div class="col-sm-8">
                    <input class="form-control" type="password" id="mdp" name="_password" placeholder="Mot de passe" value=""/>
                </div>
            </div>
            <input class="col-md-offset-2" type="submit" value="Login"/>
        </form>
    </div>
{% endblock %}
