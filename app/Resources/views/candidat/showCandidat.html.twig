{% extends 'template.html.twig' %}

{% block title %}
    {{ parent() }}
    - Index candidat
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('./css/indexProfilCandidat.css')}}" />
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1 class="police text-position sÃ©paration">{{ candidat.nom }} {{ candidat.prenom }}</h1>

                <table class="col-md-offset-4 col-md-2 policebot">
                    <tbody> 
                        <tr>
                            <th>Naissance</th>
                            <td>{% if candidat.dateNaissance %}{{ candidat.dateNaissance|date('d/m/Y') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Age</th>
                            <td>{{ candidat.age }}</td>
                        </tr>
                        <tr>
                            <th>Skills</th>
                            <td> {% for skill in candidat.nomSkill %}
                                <ul><li>{{ skill.name }}</li></ul>
                                {% endfor %}</td>
                            </tr>
                            <tr>
                                <th>Telephone</th>
                                <td>{{ candidat.telephone }}</td>
                            </tr>
                            <tr>
                                <th>Adresse</th>
                                <td>{{ candidat.adress }}</td>
                            </tr>
                            <tr>
                                <th>Code postal</th>
                                <td>{{ candidat.codePostal }}</td>
                            </tr>
                            <tr>
                                <th>E-mail</th>
                                <td>{{ candidat.email }}</td>
                            </tr>
                            <tr>
                                <th>Mot de passe</th>
                                <td>{{ candidat.mdp }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ candidat.description }}</td>
                            </tr>
                            <tr>
                                <th>Date inscription</th>
                                <td>{{ candidat.dateInscription }}</td>
                            </tr>
                            <tr>
                                <th>Avatar</th>
                                <td>{{ candidat.image }}</td>
                            </tr>
                        </tbody>
                    </table>


                </div>

            </div>
            <ul>
                <li>
                    <a class="btn btn-info btn-sm col-md-1 colorbouttton pull-right" href="{{ path('candidat_edit', { 'id': candidat.id }) }}">Editer</a>
                </li>
            </ul>
        </div>

        {% endblock %}
